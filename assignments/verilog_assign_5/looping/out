    .scope S_0x5c090eedc4c0;
T_2 ;
    %pushi/vec4 0, 0, 4;
    %store/vec4 v0x5c090ef294b0_0, 0, 4;
    %pushi/vec4 6, 0, 32;
T_2.0 %dup/vec4;
    %pushi/vec4 0, 0, 32;
    %cmp/s;
    %jmp/1xz T_2.1, 5;
    %jmp/1 T_2.1, 4;
    %pushi/vec4 1, 0, 32;
    %sub;
    %load/vec4 v0x5c090ef294b0_0;
    %addi 1, 0, 4;
    %store/vec4 v0x5c090ef294b0_0, 0, 4;
    %delay 5, 0;
    %jmp T_2.0;
T_2.1 ;
    %pop/vec4 1;
    %end;
